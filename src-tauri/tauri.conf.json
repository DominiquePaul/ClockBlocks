{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ClockBlocks",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": [
          "$APPDATA/*", 
          "$APPDATA/com.clockblocks.app/*", 
          "$APPDATA/com.clockblocks.app/data/*",
          "$HOME/*",
          "$HOME/Library/Application Support/com.clockblocks.app/*",
          "$HOME/Library/Application Support/com.clockblocks.app/clockblocks.db"
        ]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://accounts.google.com https://oauth2.googleapis.com",
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "accounts.google.com",
          "windows": ["main"],
          "plugins": ["oauth"]
        }
      ]
    },
    "bundle": {
      "resources": ["resources/google_client_secret.json"],
      "active": true,
      "targets": "all",
      "identifier": "com.clockblocks.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ClockBlocks",
        "width": 800,
        "height": 600
      }
    ]
  }
}